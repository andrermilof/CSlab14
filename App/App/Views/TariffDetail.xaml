<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.Views.TariffDetail">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="ProviderId"
                   x:Name="providEntry"
                   TextTransform="Uppercase"/>
            <Entry Placeholder="Speed"
                   x:Name="speedEntry"/>
            <Entry Placeholder="Cost"
                   x:Name="costEntry"/>
            <Button Text="Save"
                    Clicked="ButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>